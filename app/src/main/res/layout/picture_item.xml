<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imPictureView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvImageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo Name"
        app:layout_constraintStart_toEndOf="@id/imPictureView"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/tvBriefDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvImageTitle"
        android:text=""
        app:layout_constraintStart_toEndOf="@id/imPictureView"
        android:textColor="#fff"/>



</androidx.constraintlayout.widget.ConstraintLayout>